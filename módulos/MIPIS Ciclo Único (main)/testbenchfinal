module tb_MIPSCicloUnico;

    reg clk;

    // Instancia o processador completo
    MIPSCicloUnico uut (
        .clk(clk)
    );

    // Geração de clock de 10ns
    initial begin
        clk = 0;
        forever #5 clk = ~clk;
    end

    // Simulação e monitoramento
    initial begin
        $display("===== Iniciando simulação do processador MIPS Ciclo Único =====");
        $display("Tempo | PC       | Instrução    | RegWrite | ALU_result | Zero");

        // Roda por tempo suficiente para cobrir todas as instruções (cerca de 20 ciclos)
        #200;

        $display("===== Fim da simulação =====");
        $finish;
    end

endmodule
